                                        <input type="checkbox" value="1" name="status" id="edit-status-problem">
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" id="form-modal-problem-name" name="form-modal-problem-name">
                            <input type="hidden" id="form-modal-problem-type">
