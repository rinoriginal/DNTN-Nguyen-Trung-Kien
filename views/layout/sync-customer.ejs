<%-breadcrumb%>
<div class="lv-header-alt clearfix">
    <h2 class="lvh-label hidden-xs">Đồng bộ khách hàng</h2>
    <ul class="lv-actions actions">
        <li>
            <a href="/#sync-customer/new" data-toggle="tooltip" data-placement="left" data-original-title="Tạo mới">
                <i class="zmdi zmdi-plus"></i>
            </a>
        </li>
        <li>
            <a href="" data-toggle="tooltip" data-placement="left" data-original-title="Làm mới danh sách">
                <i class="zmdi zmdi-refresh"></i>
            </a>
        </li>
    </ul>
</div>
<div class="card">
    <div class="card-body table-responsive">
        <form id="data">
            <table class="table table-hover table-bordered table-fix">
                <thead>
                <tr class="">
                    <th data-sort="none" role="button" class="text-center bgm-orange c-white w-160" data-field="name">
                        Mô tả
                    </th>
                    <th class="bgm-orange c-white w-40 text-center">
                        Loại
                    </th>
                    <th class="bgm-orange c-white w-80 text-center">
                        Tổng
                    </th>
                    <th class="bgm-orange c-white w-80 text-center">
                        Hiện tại
                    </th>
                    <th class="bgm-orange c-white w-60 text-center">
                        Trạng thái
                    </th>
                    <th class="bgm-orange c-white w-60 text-center">
                        Người tạo
                    </th>
                    <th class="bgm-orange c-white w-60 text-center">
                        Ngày tạo
                    </th>
                    <th class="bgm-orange c-white w-40 text-center">Tác vụ</th>
                </tr>
                </thead>
                <tbody>
                <% categories.forEach(function(el, i) { %>
                <tr class="f-12" id="<%- el._id%>">
                    <td><%- el.name %></td>
                    <td class="text-center type"><%- (el.type == 1 ? 'Đồng bộ' : 'Tải về') %></td>
                    <td class="text-center total"><%- el.total %></td>
                    <td class="text-center current"><%- el.current %> (<%- (el.total ? parseInt((el.current/el.total)*100) : '0')%>%)</td>
                    <td class="text-center status"><%- (el.status == 1 ? 'Hoàn thành' : (el.status == 2 ? 'Dừng' : 'Đang đồng bộ'))%></td>
                    <td class="text-center"><%- (el.createBy ? el.createBy.name : '') %></td>
                    <td class="text-center"><%- (el.created ? _moment(el.created).format("hh:mm DD/MM/YYYY") : '') %></td>
                    <td class="text-center f-20">
                        <a id="restartBtn" data-id="<%- el._id%>" href="" data-toggle="tooltip" data-placement="left" data-original-title="Đồng bộ lại">
                            <i class="zmdi zmdi-refresh"></i>
                        </a>
                        <a id="stopBtn" data-id="<%- el._id%>" href="" data-toggle="tooltip" data-placement="left" data-original-title="Đồng bộ lại">
                            <i class="zmdi zmdi-stop"></i>
                        </a>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
            <%- include ('../paging.ejs') %>
        </form>
    </div>
</div>