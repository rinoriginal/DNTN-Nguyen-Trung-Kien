<%-breadcrumb%>
  <div class="card">
    <div class="portlet-title">
      <div class="lv-header-alt clearfix m-l-10">
        <h2 class="lvh-label hidden-xs">
          <%= title %>
        </h2>
        <ul class="lv-actions actions">
          <li>
            <a data-toggle="tooltip" data-placement="top" data-original-title="Refresh" id="reload"><i
                class="zmdi zmdi-refresh"></i></a>
          </li>
        </ul>
      </div>
      <div class="clearfix"></div>


      <div class="panel panel-default m-l-30 m-r-30">
        <div class="panel-heading p-0 box-shadow">
          <h5 class="panel-title p-l-10">
            <div data-id="showCustomer" class="btn-block p-10 bgm-orange c-white text-uppercase">Tra cứu</div>
          </h5>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in ticketCustomerCollapse box-shadow1">
          <div id="form-filter">
            <div class="form-body">
              <div class="row m-l-0 m-r-0 p-10  p-t-20" style="display: flex;">

                <div class="col-md-2 m-b-10">
                  <label for="created" class="control-label f-13"><span>Khoảng thời gian</span></label>
                  <div class="input-group">
                    <input type="text"
                      class="form-control pull-right search-field multi-date-picker filter-campain input" id="created"
                      name="created" placeholder=" VD: 01/01/2020">
                    <span class="input-group-addon p-l-10 bgm-gray c-white"><i role="button"
                        class="zmdi zmdi-calendar"></i></span>
                  </div>
                </div>

                <div class="col-md-2 m-b-20">
                  <label for="source" class="control-label f-13"><span>Nguồn mail</span></label>
                  <select name="source" id="source" multiple data-actions-box="true"
                    class="selectpicker search-field input" data-live-search="true" title="---Chọn---">
                    <% _.each(mailInboundSource,function(item){%>
                      <option value="<%- item._id%>">
                        <%- item.name%>
                      </option>
                      <%})%>
                  </select>
                </div>

                <div class="col-md-2 m-b-20">
                  <label for="status" class="control-label f-13"><span>Trạng thái</span></label>
                  <select name="status" class="selectpicker input" data-live-search="true" data-actions-box="true"
                    title="---Chọn---" multiple>
                    <option value="0">Chưa hoàn thành</option>
                    <option value="2">Hoàn thành</option>
                  </select>
                </div>

                <div class="col-md-2 m-b-20">
                  <label for="reasonCategories" class="control-label f-13"><span>Nhóm tình
                      trạng</span></label>
                  <select name="reasonCategories" id="reasonCategories" multiple data-actions-box="true"
                    class="selectpicker search-field input" data-live-search="true" title="---Chọn---">
                    <% _.each(reasonCategories,function(item){%>
                      <option value="<%- item._id%>">
                        <%- item.name%>
                      </option>
                      <%})%>
                  </select>
                </div>

                <div class="col-md-2 m-b-20">
                  <label for="ticketreasons" class="control-label f-13"><span>Tình trạng</span></label>
                  <select name="ticketreasons" id="ticketreasons" multiple data-actions-box="true"
                    class="selectpicker search-field input" data-live-search="true" title="---Chọn---">
                  </select>
                </div>
              </div>

              <div class="row m-0">
                <div class="col-md-12 m-b-20 text-center">
                  <button class="btn f-12 waves-effect text-uppercase  bgm-btn-search c-white border-radius"
                    id="btn_search_email_by_day">
                    Tra cứu</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row m-t-20 m-b-10 m-r-30 text-right">
      <button class="btn btn-warning f-12 btn-save waves-effect text-uppercase border-radius"
        id="btn_export_email_by_day">
        export</button>
    </div>
    <div class="div_table p-l-10 p-r-10 p-t-10 m-l-20 m-r-20">
      <table class="table table-hover table-condensed table-bordered table-fix box-shadow1" id="exceldata">
        <thead id="" class="m-t-5 m-r-5">
          <tr>
            <th class="bgm-orange c-white text-center bgm-confix-header"><span class="TXT_STT"></span></th>
            <th class="bgm-orange c-white text-center bgm-confix-header"><span class="TXT_DATE"></span></th>
            <th class="bgm-orange c-white text-center bgm-confix-header"><span class="TXT_SOURCE_EMAIL"></span></th>
            <th class="bgm-orange c-white text-center bgm-confix-header"><span class="TXT_TOTAL_FLOW_MAIL"></span></th>
            <th class="bgm-orange c-white text-center bgm-confix-header"><span class="TXT_TOTAL_EMAIL"></span></th>
            <th class="bgm-orange c-white text-center bgm-confix-header"><span class="TXT_UNDONE"></span></th>
            <th class="bgm-orange c-white text-center bgm-confix-header"><span class="TXT_DONE"></span></th>
          </tr>
        </thead>

        <tbody id="body-table">
        </tbody>
      </table>
      <table class="table table-hover table-condensed table-bordered table-fix table-striped m-t-10 box-shadow1">
        <thead id="thead-table" class="m-t-5 m-r-5">
        </thead>
      </table>
      <div class="text-center m-t-10" id="totalChat"></div>
      <div class="text-center" id="pagingReportEmail"></div>
    </div>

    <div class="div_table p-l-10 p-r-10 m-l-20 m-r-20">


    </div>

    <div class="row m-l-20 m-r-20 m-t-50">
      <div class="portlet-title flex-box">
        <div class="lv-header-alt clearfix">
          <h2 class="lvh-label hidden-xs">
            BIỂU ĐỒ THÔNG TIN
          </h2>
        </div>
        <div data-toggle="tooltip" data-placement="top" class="dropdown flex-end showHideFields m-r-30">
          <ul class="dropdown-menu pull-right p-0 bgm-showFields" id="showHideFields">
            <li class="b-b menuChart" data-id="PNG">
              <div class=" m-0 p-t-5 p-b-5 ">
                <label class="dp-block p-0">
                  <div class="p-5 text-capitalize text-nowrap c-white dp-block m-l-10 m-r-10">Export PNG</div>
                </label>
              </div>
            </li>
            <li class="b-b menuChart" data-id="SVG">
              <div class=" m-0 p-t-5 p-b-5 ">
                <label class="dp-block p-0">
                  <div class="p-5 text-capitalize text-nowrap c-white dp-block m-l-10 m-r-10">Export SVG</div>

                </label>
              </div>
            </li>
            <li class="b-b menuChart" data-id="CSV">
              <div class=" m-0 p-t-5 p-b-5 ">
                <label class="dp-block p-0">
                  <div class="p-5 text-capitalize text-nowrap c-white dp-block m-l-10 m-r-10">Export CSV</div>

                </label>
              </div>
            </li>

          </ul>
          <button data-toggle="dropdown" aria-expanded="false" aria-haspopup="true"
            class="btn btn-light f-25 flex-box p-t-0 p-b-0" title="Cột hiển thị">
            <i class="zmdi zmdi-menu"></i>
          </button>
        </div>
      </div>
      <div class="col-md-12" id="chart">
      </div>
      <div class="col-md-12 m-b-20 text-center">
        <span>Biểu đồ thống kê mail theo tháng</span>
      </div>
    </div>
  </div>