    <!-- start card filter dữ liệu -->
    <div class="card m-15">

        <div class="panel panel-default">

            <div class="panel-heading p-0" id="product-anchor">
                <h5 class="panel-title">
                    <div data-id="showCustomer" class="btn-block p-10 bgm-green c-white text-uppercase ">
                        <%- title %>
                        <span id="btn-toggle-filter" class="d-none"
                            style="float:right;cursor: pointer;text-transform: none">
                            Lọc dữ liệu <i class="fa fa-chevron-circle-down"></i>
                        </span>
                    </div>

                </h5>
            </div>

            <!-- start panel-body -->
            <div class="panel-body p-30 p-b-15">
                <div class="panel-filter" id="transaction-filter">

                    <div class="row form-group">
                        <label for="modal_status" class="col-sm-1 control-label">Trạng thái:</label>
                        <div class="col-sm-11">
                            <div class="toggle-switch">
                                <input id="create_promotion_status" type="checkbox" hidden="hidden" checked>
                                <label for="create_promotion_status" class="ts-helper"></label>
                                <strong class="m-l-20">
                                    <span id="create_promotion_status_text"></span>
                                </strong>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-xs-4 col-sm-12 col-md-12 m-b-15">
                            <label for="title" class="control-label f-13">Tiêu đề</label>
                            <input type="text" class="form-control input-sm" id="title" name="title" placeholder="">
                        </div>
                        <div class="col-xs-8 col-sm-12 col-md-12">
                            <label for="content" class="control-label f-13">Nội dung</label>
                            <textarea class="form-control" id="content" name="content"></textarea>
                        </div>
                    </div>

                    <!-- start ngày bắt đầu - ngày kết thúc -->
                    <div class="row form-group m-t-45">
                        <div class="col-md-6">
                            <div class="row">

                                <label for="startTime" class="col-sm-4 col-md-4 control-label">Thời gian bắt đầu
                                    <span class="required">*</span></label>
                                <div class="col-md-8 col-md-8">
                                    <div class="fg-line">
                                        <input type="text" value="" class="date-picker form-control input-sm required"
                                            id="startTime" name="startTime">
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="row">

                                <label for="endTime" class="col-sm-4 col-md-4 control-label">Thời gian kết thúc
                                    <span class="required">*</span></label>
                                <div class="col-sm-8 col-md-8">
                                    <div class="fg-line">
                                        <input type="text" value="" class="date-picker form-control input-sm required"
                                            id="endTime" name="endTime">
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <!-- end ngày bắt đầu - ngày kết thúc -->
                    <!-- start Vị trí áp dụng -->
                    <div class="row form-group m-t-45">
                        <div class="col-md-12 m-b-15">
                            <h3>Vị trí áp dụng</h3>
                        </div>
                        <div class="col-md-12">

                            <div class="row m-b-15">

                                <label for="searchByName" class="col-sm-2 col-md-2 control-label">Khu vực <span
                                        class="required">*</span></label>
                                <div class="col-md-10 col-md-10">

                                    <label class="checkbox-inline"><input type="checkbox" name="checkbox-area"
                                            value="1,2,3">Toàn Quốc</label>
                                    <% for(var i = 0; i < areas.length; i++) {%>
                                    <label class="checkbox-inline p-l-50"><input type="checkbox" name="checkbox-area"
                                            value="<%- areas[i].value%>"><%- areas[i].name%></label>
                                    <%}%>
                                </div>

                            </div>

                            <div class="row">

                                <label for="province" class="col-sm-2 col-md-2 control-label">Tỉnh thành <span
                                        class="required">*</span></label>
                                <select class="validate[required] col-md-10 col-md-10 selectpicker"  data-live-search="true" data-actions-box="true" multiple
                                    name="province[]" id="province">
                                    
                                </select>

                            </div>


                        </div>

                    </div>
                    <!-- end Vị trí áp dụng -->
                    <!-- start Chọn nhà hàng -->
                    <div class="row form-group m-t-45">
                        <div class="col-md-12 m-b-15">
                            <h3>Chọn nhà hàng:</h3>
                        </div>
                        <div class="col-md-12">
                            <div class="row">

                                <div class="col-md-4">
                                    <div class="bg-black-trp text-center p-10 m-b-5 ">
                                        <span>Nhãn hiệu</span>
                                        <span class="pull-right">
                                            <input name="checkbox-brands" type="checkbox" value="all">
                                        </span>
                                        
                                    </div>
                                    <div class="input-group m-b-5 d-none">
                                        <input class="form-control filter" type="text" id="searchBrand" name="searchBrand">
                                        <span class="input-group-addon p-l-10 bgm-gray c-white">
                                            <i role="button" class="zmdi zmdi-search"></i>
                                        </span>
                                    </div>
                        
                                    <ul class="list-group list-result-filter" id="listBrand">
                                        <% for(var i = 0; i < data.brands.length; i++) {%>
                                    <li class="list-group-item" id="<%- data.brands[i]._id %>">
                                        <span><%- data.brands[i].name%></span>
                                        <span class="pull-right">
                                            <input name="checkbox-brands" type="checkbox"
                                                value="<%- data.brands[i]._id %>">
                                        </span>
                                    </li>
                                    <%}%>
                                    </ul>
                                </div>
                                <div class="col-md-8 p-l-0">
                                    <table id="tblRestaurant" data-type="cquest" data-unique-id="id"
                                    data-toggle="table" data-filter-control="true" data-pagination="true"
                                    data-page-size="15" class="table table-fix table-bordered f-13 table-customize">
                                    <thead>
                                        <tr>
                                            <th data-field="name"
                                                data-filter-control="input"
                                                data-sortable="true"
                                                style="background-color: rgba(237, 236, 236, 0.6);">
                                                <i class="zmdi zmdi-account c-gray f-14 p-relative t-1 m-r-10 d-none">
                                                </i>Nhà hàng
                                            </th>
                                            <th data-field="area" data-filter-control="input"
                                                data-sortable="true"
                                                style="background-color: rgba(237, 236, 236, 0.6);"><i
                                                    class="zmdi zmdi-globe c-gray f-14 p-relative t-1 m-r-5 d-none"></i>Khu Vực
                                            </th>
                                            <th data-field="province"
                                                style="background-color: rgba(237, 236, 236, 0.6);"><i
                                                    class="zmdi zmdi-time c-gray f-14 p-relative t-1 m-r-5 d-none"></i> Tỉnh Thành
                                            </th>
                                            <th data-field="actions"
                                                style="background-color: rgba(237, 236, 236, 0.6);">
                                                <input name="checkbox-restaurants" type="checkbox" value="all">
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                                </div>

                            </div>
                           
                
                        </div>

                    </div>
                    <!-- end Chọn nhà hàng -->

                    <table id="tblRestaurantSelected" data-type="cquest" data-unique-id="id"
                                    data-toggle="table" data-filter-control="true" data-pagination="true"
                                    data-page-size="15" class="table table-fix table-bordered f-13 table-customize">
                                    <thead>
                                        <tr>
                                           
                                            <th data-field="brand" data-filter-control="input"
                                                data-sortable="true"
                                                style="background-color: rgba(237, 236, 236, 0.6);"><i
                                                    class="zmdi zmdi-globe c-gray f-14 p-relative t-1 m-r-5 d-none"></i>Brand
                                            </th>
                                            <th data-field="area" data-filter-control="input"
                                                data-sortable="true"
                                                style="background-color: rgba(237, 236, 236, 0.6);"><i
                                                    class="zmdi zmdi-globe c-gray f-14 p-relative t-1 m-r-5 d-none"></i>Khu Vực
                                            </th>
                                            <th data-field="province"
                                                style="background-color: rgba(237, 236, 236, 0.6);"><i
                                                    class="zmdi zmdi-time c-gray f-14 p-relative t-1 m-r-5 d-none"></i> Tỉnh Thành
                                            </th>
                                            <th data-field="name"
                                                data-filter-control="input"
                                                data-sortable="true"
                                                style="background-color: rgba(237, 236, 236, 0.6);">
                                                <i class="zmdi zmdi-account c-gray f-14 p-relative t-1 m-r-10 d-none">
                                                </i>Nhà hàng
                                            </th>
                                            <th data-field="actions"
                                                style="background-color: rgba(237, 236, 236, 0.6);">
                                                <!-- <input name="checkbox-restaurants" type="checkbox" value="all"> -->
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>

                    <div class="clearfix"></div>
                </div>

            </div>
            <!-- end panel-body -->

        </div>

    </div>
    <!-- end card filter dữ liệu -->


    <!-- start card danh sách file đính kèm -->
    <div class="card m-15">

        <div class="panel panel-default">

            <div class="panel-heading p-0" id="product-anchor">
                <h5 class="panel-title">
                    <div data-id="showCustomer" class="btn-block p-10 bgm-green c-white text-uppercase ">
                        Văn bản - Tài liệu
                        <span id="btn-toggle-filter" class="d-none"
                            style="float:right;cursor: pointer;text-transform: none">
                            Lọc dữ liệu <i class="fa fa-chevron-circle-down"></i>
                        </span>
                    </div>

                </h5>
            </div>

            <div class="panel-body p-15">
                <div class="panel-filter" id="transaction-filter">

                    <div class="row">
                        <div class="col-md-12">
                            <input id="file" class="d-none" multiple type="file" />
                            <button class="btn btn-primary pull-right waves-effect m-b-15" id="importFile"
                                name="importFile" data-toggle="modal" href="#" type="button">
                                Import File
                            </button>
                        </div>
                    </div>

                    <table id="tblListFile" data-type="cquest" data-unique-id="id" data-toggle="table"
                        data-filter-control="true" data-pagination="true" data-page-size="15"
                        class="table table-fix table-bordered f-13 table-customize">
                        <thead>
                            <tr>
                                <th data-field="name" data-filter-control="input" data-sortable="true"
                                    style="background-color: rgba(237, 236, 236, 0.6);">
                                    <i class="zmdi zmdi-account c-gray f-14 p-relative t-1 m-r-10 d-none">
                                    </i>Tài liệu
                                </th>
                                <th data-field="updated" data-filter-control="input" data-sortable="true"
                                    style="background-color: rgba(237, 236, 236, 0.6);"><i
                                        class="zmdi zmdi-globe c-gray f-14 p-relative t-1 m-r-5 d-none"></i>Thời gian
                                    cập nhật
                                </th>
                                <th data-field="fileName" style="background-color: rgba(237, 236, 236, 0.6);"><i
                                        class="zmdi zmdi-time c-gray f-14 p-relative t-1 m-r-5 d-none"></i> File đính
                                    kèm
                                </th>
                                <th data-field="actions" style="background-color: rgba(237, 236, 236, 0.6);"><i
                                        class="zmdi zmdi-eye c-gray f-14 p-relative t-1 m-r-5 d-none"></i>Tác vụ
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>


                    <div class="clearfix"></div>
                </div>

            </div>
        </div>

    </div>
    <!-- end card danh sách file đính kèm -->

    <!-- start card trạng thái thoạt động và nút submit -->
    <div class="card m-15 p-b-5">

        <div class="panel panel-default">

            <div class="panel-heading p-0 d-none" id="product-anchor">
                <h5 class="panel-title">
                    <div data-id="showCustomer" class="btn-block p-10 bgm-green c-white text-uppercase ">
                        Trạng thái hoạt động
                    </div>

                </h5>
            </div>

            <div class="panel-body p-30 p-b-15">
                <div class="panel-filter" id="transaction-filter">

                    <div class="text-center col-sm-12 col-md-12 text-center">
                        <button type="button" class="btn btn-primary waves-effect" id="btnCreatePromotions">
                            Xác nhận
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </div>

            </div>
        </div>

    </div>
    <!-- end card danh sách file đính kèm -->

</div>