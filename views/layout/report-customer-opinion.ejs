<%- breadcrumb %>
<script>
    var recordPath = JSON.parse('<%- JSON.stringify(recordPath);%>');
</script>
<div class="card">
    <div class="lv-header-alt clearfix m-b-5">
        <h2 class="lvh-label hidden-xs"><%- title %></h2>
        <ul class="lv-actions actions">
            <li><a data-toggle="tooltip" data-placement="top" data-original-title="Tải file báo cáo"
                   id="download-excel"><i
                            class="zmdi zmdi-cloud-download"></i></a></li>
            <li><a data-toggle="tooltip" data-placement="top" data-original-title="Refresh"><i
                            class="zmdi zmdi-refresh"></i></a></li>
            <li data-toggle="tooltip" data-placement="top" data-original-title="Cột hiển thị" class="dropdown">
                <a role="button" data-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
                    <i class="zmdi zmdi-view-column"></i>
                </a>
                <ul class="dropdown-menu pull-right p-t-0" id="showHideFields"></ul>
            </li>
        </ul>
    </div>

    <div class="">
        <div>
            <div class="panel-body p-0 c-overflow">
                <div class="tab-content">
                    <div role="tabpanel" style="height: 100%" class="tab-pane animated active"
                         id="tab-not-process-ticket">
                        <form role="form" id="frm-report-inbound-ticket">
                            <table class="table table-bordered table-fix" id="tbl-ticket">
                                <thead>
                                <tr>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="company"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="category"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="reason"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="subreason"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="satify"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="stage"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="status"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="duration"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="updated"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="type"></span>
                                    </th>
                                    <th class="bgm-orange c-white text-center">
                                        <span class="action"></span>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>

                                <tr class="filter" id="search-input">
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="idCompany" id="idCompany">
                                                <option selected value="">- Chọn -</option>
                                                <% company.forEach(function(el){ %>
                                                <option value="<%- el._id %>"><%- el.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="ticketReasonCategory" id="ticketReasonCategory">
                                                <option selected value="">- Chọn -</option>
                                                <% category.forEach(function(el){ %>
                                                <option value="<%- el._id %>"><%- el.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="ticketReason" id="ticketReason">
                                                <option selected value="">- Chọn -</option>
                                                <% reason.forEach(function(el){ %>
                                                <option value="<%- el._id %>"><%- el.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="ticketSubreason" id="ticketSubreason">
                                                <option selected value="">- Chọn -</option>
                                                <% subreason.forEach(function(el){ %>
                                                <option value="<%- el._id %>"><%- el.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="customerStatisfy" id="customerStatisfy">
                                                <option selected value="">- Chọn -</option>
                                                <% satify.forEach(function(el){ %>
                                                <option value="<%- el._id %>"><%- el.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="customerStatisfyStage" id="customerStatisfyStage">
                                                <option selected value="">- Chọn -</option>
                                                <% satifyStage.forEach(function(el){ %>
                                                <option value="<%- el._id %>"><%- el.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="status" id="status">
                                                <option value="">- Chọn -</option>
                                                <option value="0">Chưa xử lí</option>
                                                <option value="1">Đang xử lí</option>
                                                <option value="2">Đã xử lí</option>
                                            </select>
                                        </div>
                                    </td>
                                    <td><input type="text" class="form-control input-sm" disabled></td>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control pull-right multi-date-picker searchColumn"
                                                   id="updated" name="updated"
                                                   placeholder="VD: 01/19/2016 9:51 AM">
                                            <span class="input-group-addon p-l-10 bgm-gray c-white">
                                                <i role="button" class="zmdi zmdi-calendar"></i></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <select class="tag-select searchColumn" name="type">
                                                <option value="">- Chọn -</option>
                                                <option value="0">Gọi vào</option>
                                                <option value="1">Gọi ra</option>
                                            </select>
                                        </div>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-block waves-effect"
                                                id="btn-search" name="btn-search">
                                            <i class="zmdi zmdi-filter-list m-r-5"></i> Lọc
                                        </button>
                                    </td>
                                </tr>
                                <tbody id="ticket-body">
                                </tbody>
                                </tbody>
                            </table>
                            <div class="text-center" id="ticket-total">
                            </div>
                            <div class="text-center" id="ticket-paging"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>