<%- breadcrumb %>
<script>
    var areasProvinces = JSON.parse(`<%- JSON.stringify(areasProvinces) %>`)
    var areas = JSON.parse(`<%- JSON.stringify(areas) %>`)
    var _brands = JSON.parse(`<%- JSON.stringify(brands) %>`)
    var _provinces = JSON.parse(`<%- JSON.stringify(provinces) %>`)
    var _agent = JSON.parse(`<%- JSON.stringify(agent) %>`)
</script>
<div class="card">
    <div class="portlet-title">
        <div class="lv-header-alt clearfix">
            <h2 class="lvh-label hidden-xs">
                Quản lý user - nhà hàng
            </h2>
            <ul class="lv-actions actions">
                <li>
                    <a data-toggle="tooltip" data-placement="top" data-original-title="Refresh" id="reload"><i
                            class="zmdi zmdi-refresh"></i></a>
                </li>
            </ul>
        </div>
        <div class="clearfix"></div>


        <div class="panel panel-default m-l-10 m-r-10">
            <div class="panel-heading p-0">
                <h5 class="panel-title">
                    <div data-id="showCustomer" class="btn-block p-10 bgm-orange c-white text-uppercase">Tra cứu</div>
                </h5>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in ticketCustomerCollapse">
                <form class="form-horizontal" id="form-filter">
                    <div class="form-body">
                        <div class="row m-0 p-10">

                            <div class="form-group m-10">
                                <div class="col-md-2 m-b-20">
                                    <label for="created" class="control-label f-13"><span>Thời gian thêm
                                            user</span></label>
                                    <div class="input-group">
                                        <input type="text"
                                            class="form-control pull-right search-field multi-date-picker filter-campain input"
                                            id="created" name="created" placeholder=" VD: 01/01/2020">
                                        <span class="input-group-addon p-l-10 bgm-gray c-white"><i role="button"
                                                class="zmdi zmdi-calendar"></i></span>
                                    </div>
                                </div>
                                <div class="col-md-2 m-b-20">
                                    <label for="idAgent" class="control-label f-13"><span>User</span></label>
                                    <select name="idAgent" class="selectpicker input" data-live-search="true"
                                        data-actions-box="true" title="Chọn điện thoại viên" multiple>
                                        <option value="">---- Chọn ----</option>
                                        <%agent.forEach(function(item){%>
                                        <option value="<%- item._id%>"><%- item.displayName%></option>
                                        <%})%>
                                    </select>
                                </div>
                                <div class="col-md-2 m-b-20">
                                    <label for="idBrand" class="control-label f-13"><span>Nhãn hiệu</span></label>
                                    <select name="idBrand" class="selectpicker input" data-live-search="true"
                                        id="idBrand" data-actions-box="true" title="Chọn brand" multiple>
                                        <%brands.forEach(function(item){%>
                                        <option value="<%- item._id%>"><%- item.name%></option>
                                        <%})%>
                                    </select>
                                </div>
                                <div class="col-md-2 m-b-20">
                                    <label for="idProvince" class="control-label f-13"><span>Tỉnh thành</span></label>
                                    <select name="idProvince" class="selectpicker input" data-live-search="true"
                                        id="idProvince" data-actions-box="true" title="Chọn tỉnh thành" multiple>

                                    </select>
                                </div>
                                <div class="col-md-2 m-b-20">
                                    <label for="idRestaurant" class="control-label f-13"><span>Nhà hàng</span></label>
                                    <select name="idRestaurant" class="selectpicker input" data-live-search="true"
                                        id="idRestaurant" data-actions-box="true" title="Chọn nhà hàng" multiple>

                                    </select>
                                </div>
                            </div>


                        </div>
                        <div class="row m-0 text-center">
                            <!-- <div class="btn btn-sm btn-primary">
                                <a type="submit" id='searchUserRestaurant' class="btn bgm-blue uppercase c-white"
                                    style="width:auto">
                                    <strong>Tra cứu</strong></a>
                            </div> -->

                            <button type="button" class="btn btn-sm btn-primary m-b-15" id="searchUserRestaurant">
                                <strong>TRA
                                    CỨU</strong></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row m-t-10 m-r-20 text-right">
        <button class="btn btn-sm btn-primary" id=""><a data-toggle="tooltip" data-placement="top"
                data-original-title="Tải file mẫu" class="c-white" data-url="/user-restaurant-excel"
                id="download-excel">Template excel</a></button>

        <button class="btn btn-sm btn-primary" id="btn-addTicketAdvisory"> <a href="/#user-restaurant-import-history"
                data-toggle="tooltip" class="c-white" data-original-title="Tạo mới">Import
                history</a></button>

        <button class="btn btn-sm btn-primary" id="btn-addTicketAdvisory"> <a href="/#user-restaurant-import"
                data-toggle="tooltip" class="c-white" data-original-title="Tạo mới">Import
                file</a></button>

        <button class="btn btn-sm btn-primary" id="btn-add-user" data-toggle="modal"
            data-target="#userRestaurantPopup">Add User</button>


    </div>
    <div class="div_table p-10">
        <table class="table table-hover table-condensed table-bordered table-fix" id="exceldata">
            <thead id="thead-table">
                <tr>
                    <th class="bgm-orange c-white text-center">STT</th>
                    <th class="bgm-orange c-white text-center">User</th>
                    <th class="bgm-orange c-white text-center">Tên hiển thị</th>
                    <th class="bgm-orange c-white text-center">Nhãn hiệu</th>
                    <th class="bgm-orange c-white text-center">Tỉnh Thành</th>
                    <th class="bgm-orange c-white text-center">Nhà hàng </th>
                    <th class="bgm-orange c-white text-center">Thời gian thêm</th>
                    <th class="bgm-orange c-white text-center">Tác vụ</th>
                </tr>
            </thead>

            <tbody id="tbBody">
            </tbody>
        </table>

        <div class="text-center" id="paging"></div>
        <div id="container"></div>
    </div>
</div>
