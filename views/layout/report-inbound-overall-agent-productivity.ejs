<%- breadcrumb %>
<script>
    var EXCEL_CONFIG = `<%- encodeURIComponent(JSON.stringify(EXCEL_CONFIG)); %>`;
</script>
<div class="card">
    <div class="portlet-title">
        <div class="lv-header-alt clearfix">
            <h2 class="lvh-label hidden-xs">Báo cáo gọi vào - Báo tổng quát theo điện thoại viên</h2>
            <ul class="lv-actions actions">
                <li><a data-toggle="tooltip" data-placement="top" data-original-title="Refresh"><i
                            class="zmdi zmdi-refresh"></i></a></li>
            </ul>
        </div>
        <div class="clearfix"></div>
        <form class="form-horizontal" role="form">
            <div class="form-body">
                <div class="row m-0 m-t-20">
                    <div class="col-md-3 m-b-20">
                        <label for="startDate" class="control-label f-13"><span>Ngày bắt đầu</span></label>
                        <div class="input-group">
                            <input type="text"
                                class="form-control pull-right search-field date-picker filter-campain input"
                                id="startDate" name="startDate" placeholder=" VD: 01/01/2016">
                            <span class="input-group-addon p-l-10 bgm-gray c-white"><i role="button"
                                    class="zmdi zmdi-calendar"></i></span>
                        </div>
                    </div>
                    <div class="col-md-3 m-b-20">
                        <label for="endDate" class="control-label f-13"><span>Ngày kết thúc</span></label>
                        <div class="input-group">
                            <input type="text"
                                class="form-control pull-right search-field date-picker filter-campain input"
                                id="endDate" name="endDate" placeholder="VD: 31/12/2016">
                            <span class="input-group-addon p-l-10 bgm-gray c-white"><i role="button"
                                    class="zmdi zmdi-calendar"></i></span>
                        </div>
                    </div>
                    <div class="col-md-3 m-b-20">
                        <label for="idCompany" class="control-label f-13"><span>Công ty</span></label>
                        <select name="idCompany" class="selectpicker input" title="Chọn công ty">
                            <% for(var i = 0;i < company.length;i++){ %>
                            <option value=<%- company[i]._id %>><%- company[i].name %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-md-3 m-b-20">
                        <label for="agentId" class="control-label f-13"><span>Điện thoại viên</span></label>
                        <select name="agentId" class="selectpicker input" title="Chọn điện thoại viên" multiple  data-live-search="true"
                        data-actions-box="true">
                            <% for(var i = 0;i < agent.length;i++){ %>
                            <option value=<%- agent[i]._id %> data-id=<%- agent[i].idAgentCisco %> ><%- agent[i].displayName %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="row m-0">
                    <div class="col-md-3"></div>
                    <div class="col-md-6 m-b-20">
                        <div class="btn-group btn-group btn-group-justified">
                            <a type="submit" class="btn bgm-blue uppercase c-white" style="width:auto"><i
                                    class="fa fa-search m-r-10"></i><strong>Tìm
                                    kiếm</strong></a>

                            <div class="col-md-2"></div>
                            <a id="exportexcel" class="btn bgm-blue default c-white" style="width:auto"><i
                                    class="fa fa-file-excel-o m-r-10"></i>Xuất Excel</a>
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
        </form>
    </div>
    <script>
    </script>
    <div class="card-body table-responsive" style=" min-height:200px">
        <table class="table table-hover table-condensed table-bordered table-fix table-striped"
            style="table-layout: fixed;" id="exceldata">
            <thead>
                <tr>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_AGENT"></span></th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_TOTAL_CALL"></span></th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_TOTAL_SERVED"></span></th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_MAX_LENGTH_CALL"></span>
                    </th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_MIN_LENGTH_CALL"></span>
                    </th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_TOTAL_MISSED"></span></th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_CALL_PRODUCTIVITY"></span>
                    </th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span
                            class="TXT_CALL_TIME_PRODUCTIVITY"></span></th>
                    <th class="bgm-orange c-white text-center" colspan="2"><span class="TXT_CALL_DURATION"></span></th>
                    <th class="bgm-orange c-white text-center" colspan="2"><span class="TXT_AVG_CALL_DURATION"></span>
                    </th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_TOTAL_TICKET"></span></th>
                    <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_PROCESSED_TICKET"></span>
                    </th>
                </tr>
                <tr>
                    <td class="bgm-orange c-white text-center" style="overflow: visible !important;">hh:mm:ss</td>
                    <td class="bgm-orange c-white text-center" style="overflow: visible !important;">ss</td>
                    <td class="bgm-orange c-white text-center" style="overflow: visible !important;">hh:mm:ss</td>
                    <td class="bgm-orange c-white text-center" style="overflow: visible !important;">ss</td>
                </tr>
                <!--<tr>-->
                <!--<th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_TOTAL_TICKET"></span></th>
            <th class="bgm-orange c-white text-center" rowspan="2"><span class="TXT_PROCESSED_TICKET"></span></th>-->
                <!--</tr>-->
            </thead>
            <tbody>
                <%
            function pad(num) {
                return ("0"+num).slice(-2);
            }
            function sumValueViaProperties(arr, pro, toLocalString) {
                var sum = arr.reduce(function(s, i) {
                    return s + (i[pro] || 0);
                }, 0);
                if (toLocalString) {
                    return sum.toLocaleString('vn');
                }
                return sum;
            }
            function hms(secs) {
                if(isNaN(secs)) return "0:00:00";
                var sec = Math.floor(secs);
                var minutes = Math.floor(sec / 60);
                sec = sec%60;
                var hours = Math.floor(minutes/60)
                minutes = minutes%60;
                return hours+":"+pad(minutes)+":"+pad(sec);
            }%>
                <% if(result.length == 0){ %>
                <script> var isAlertSearch = true;</script>
                <% } else{ %>
                <script> var isAlertSearch = false;</script>
                <% } %>
                <% var sum =0%>>
                <%for(var i = 0; i<result.length;i++){%>
                <% var sum = sum+ result[i].callDuration%>
                <%}%>
                <% 
                    var totalAvgCallDuration = 0;
                    var totalCallDuration = 0;
                    var totalConnected = 0;
                %>
                <%for(var i = 0; i<result.length;i++){%>
                <tr>
                    <%
                        var avgCallDuration = Math.floor(result[i].avgCallDuration / 1000);
                        totalAvgCallDuration += avgCallDuration;
                        totalCallDuration += result[i].callDuration;
                        totalConnected += result[i].connected;

                    %>
                    <td><%- result[i]._id ? result[i]._id : "Missing"%></td>
                    <td><%- result[i].totalCall%></td>
                    <td><%- result[i].connected%></td>
                    <!---->
                    <td><%- hms(result[i].maxLength / 1000)%></td>
                    <td><%- hms(result[i].minLength / 1000)%></td>
                    <!---->
                    <td><%- result[i].missed%></td>
                    <td><%- ((result[i].connected/result[i].totalCall)*100).toFixed(2) %>%</td>
                    <td><%- parseFloat(((result[i].callDuration)/sum)*100).toFixed(2) %>%</td>
                    <td><%- hms(result[i].callDuration/1000)%></td>
                    <td><%- Math.floor(result[i].callDuration / 1000)%></td>
                    <td><%- hms(avgCallDuration)%></td>
                    <td><%- avgCallDuration %></td>
                    <td><%- result[i].total%></td>
                    <td><%- result[i].done%></td>
                </tr>
                <%}%>
            </tbody>
            <tfoot style="font-weight: bold; font-size: 13px;">
            <tr>
                <td><b>Tổng</b></td>
                <td>
                    <%- sumValueViaProperties(result, 'totalCall', true)%>
                </td>
                <td>
                    <%- sumValueViaProperties(result, 'connected', true)%>
                </td>
                <td>
                    <% 0%>
                </td>
                <td>
                    <% 0%>
                </td>
                <td>
                    <%- sumValueViaProperties(result, 'missed', true)%>
                </td>
                <td>
                    <% 0%>
                </td>
                <td>
                    <% 100%>100%
                </td>
                <td>
                    <%- hms(sumValueViaProperties(result, 'callDuration') / 1000)%>
                </td>
                <td>
                    <%- Math.floor(sumValueViaProperties(result, 'callDuration') / 1000).toLocaleString('vn')%>
                </td>
                <td>
                    <%- hms((totalCallDuration/1000) / totalConnected) %>
                </td>
                <td>
                    <%- parseInt((totalCallDuration/1000) / totalConnected)%>
                </td>
                <td>
                    <%- sumValueViaProperties(result, 'total', true)%>
                </td>
                <td>
                    <%- sumValueViaProperties(result, 'done', true)%>
                </td>
                </tr>
                </tfoot>
        </table>
    </div>
</div>