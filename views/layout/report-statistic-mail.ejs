                <li>
                    <a data-toggle="tooltip" data-placement="top" data-original-title="Refresh" id="reload"><i
                            class="zmdi zmdi-refresh"></i></a>
                </li>
            </ul>
        </div>
        <div class="clearfix"></div>


        <div class="panel panel-default m-l-30 m-r-30">
            <div class="panel-heading p-0 box-shadow">
                <h5 class="panel-title p-l-10">
                    <div data-id="showCustomer" class="btn-block p-10 bgm-orange c-white text-uppercase">Tra cứu</div>
                </h5>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in ticketCustomerCollapse box-shadow1">
                <div id="form-filter">
                    <div class="form-body">

                        <div class="row m-l-0 m-r-0 p-10 p-t-20" style="display: flex;">

                            <div class="col-md-2 m-b-20">
                                <label for="created" class="control-label f-13"><span>Khoảng thời gian</span></label>
                                <div class="input-group">
                                    <input type="text"
                                        class="form-control pull-right search-field multi-date-picker filter-campain input"
                                        id="created" name="created" placeholder=" VD: 01/01/2020 - 01/01/2021">
                                    <span class="input-group-addon p-l-10 bgm-gray c-white"><i role="button"
                                            class="zmdi zmdi-calendar"></i></span>
                                </div>
                            </div>

                            <div class="col-md-2 m-b-20">
                                <label for="customerPhone" class="control-label f-13"><span>Số điện thoại
                                        KH</span></label>
                                <input type="text" class="form-control search-field filter-campain input"
                                    name="customerPhone" placeholder="">
                            </div>
                            <div class="col-md-4 m-b-20">
                                <label for="customerName" class="control-label f-13"><span>Họ tên KH</span></label>
                                <input type="text" class="form-control search-field filter-campain input"
                                    id="customerName" name="customerName" placeholder="">
                            </div>
                            <div class="col-md-4 m-b-20">
                                <label for="customerEmail" class="control-label f-13"><span>Email</span></label>
                                <input type="text" class="form-control search-field filter-campain input"
                                    name="customerEmail" placeholder="">
                            </div>


                        </div>

                        <div class="row m-l-0 m-r-0 p-10" style="display: flex;">

                            <div class="col-md-2 m-b-20">
                                <label for="status" class="control-label f-13"><span>Trạng thái</span></label>
                                <select name="status" class="selectpicker input" data-live-search="true"
                                    data-actions-box="true" title="---Chọn---" multiple>
                                    <option value="2">Hoàn thành</option>
                                    <option value="10">Chưa hoàn thành</option>
                                </select>
                            </div>

                            <div class="col-md-2 m-b-20">
                                <label for="reasonCategories" class="control-label f-13"><span>Nhóm tình
                                        trạng</span></label>
                                <select name="reasonCategories" id="reasonCategories" multiple data-actions-box="true"
                                    class="selectpicker search-field input" data-live-search="true" title="---Chọn---">
                                    <% _.each(reasonCategories,function(item){%>
                                    <option value="<%- item._id%>"><%- item.name%></option>
                                    <%})%>
                                </select>
                            </div>

                            <div class="col-md-2 m-b-20">
                                <label for="ticketreasons" class="control-label f-13"><span>Tình trạng</span></label>
                                <select name="ticketreasons" id="ticketreasons" multiple data-actions-box="true"
                                    class="selectpicker search-field input" data-live-search="true" title="---Chọn---">

                                </select>
                            </div>


                            <div class="col-md-2 m-b-20">
                                <label for="agent" class="control-label f-13"><span>Agent</span></label>
                                <select name="agent" class="selectpicker input" data-live-search="true"
                                    data-actions-box="true" title="Chọn Agent" multiple>
                                    <% agent.forEach(function(item){%>
                                    <option value="<%- item._id%>"><%- item.displayName%></option>
                                    <%})%>

                                </select>
                            </div>
                            <div class="col-md-4 m-b-20">
                                <label for="subject" class="control-label f-13"><span>Tiêu đề mail</span></label>
                                <input type="text" class="form-control search-field filter-campain input" name="subject"
                                    placeholder="">
                            </div>
                        </div>

                        <div class="row m-l-0 m-r-0 p-10" style="display: flex;">
                            <div class="col-md-2 m-b-20">
                                <label for="source" class="control-label f-13"><span>Nguồn mail</span></label>
                                <select name="source" class="selectpicker input" data-live-search="true"
                                    data-actions-box="true" title="Chọn kênh chat" multiple>
                                    <% source.forEach(function(item){%>
                                    <option value="<%- item.idMailCisco%>"><%- item.name%></option>
                                    <%})%>

                                </select>
                            </div>

                            <div class="col-md-2 m-b-20">
                                <label for="deadline" class="control-label f-13"><span>Ngày hẹn xử lý</span></label>
                                <div class="input-group">
                                    <input type="text"
                                        class="form-control pull-right search-field multi-date-picker filter-campain input"
                                        id="deadline" name="deadline" placeholder=" VD: 01/01/2020 - 01/01/2021">
                                    <span class="input-group-addon p-l-10 bgm-gray c-white"><i role="button"
                                            class="zmdi zmdi-calendar"></i></span>
                                </div>
                            </div>






                        </div>


                        <div class="row m-0">
                            <div class="col-md-12 m-b-20 text-center">
                                <button
                                    class="btn f-12 waves-effect text-uppercase  bgm-btn-search c-white border-radius"
                                    id="searchChat">
                                    Tra cứu</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row m-t-10 m-r-30 text-right flex-end">
        <button class="btn btn-warning f-12 btn-save waves-effect text-uppercase border-radius m-r-10" id="btnExport">
            export</button>
        <div data-toggle="tooltip" data-placement="top" class="dropdown flex-end showHideFields border">
            <ul class="dropdown-menu pull-right p-t-0 bgm-showFields" id="showHideFields"></ul>
            <button data-toggle="dropdown" aria-expanded="false" aria-haspopup="true"
