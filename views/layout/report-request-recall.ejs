<%-breadcrumb%>
<div class="card">
    <div class="lv-header-alt clearfix m-b-5">
        <h2 class="lvh-label hidden-xs"><%- title %></h2>
        <ul class="lv-actions actions">
            <li>
                <a data-toggle="tooltip" data-placement="top" data-original-title="Refresh">
                    <i class="zmdi zmdi-refresh"></i>
                </a>
            </li>
        </ul>
    </div>
    <form class="form-horizontal" role="form" id="report-request-recall">
        <div class="form-body">
            <div class="row m-0 m-t-20">
                <div class="col-md-3 m-b-20">
                    <label for="startDate" class="control-label f-13"><span>Ngày bắt đầu</span></label>
                    <div class="input-group">
                        <input type="text" class="form-control pull-right date-picker searchColumn" id="startDate" name="startDate" placeholder="VD: 01/01/2021">
                        <span class="input-group-addon p-l-10 bgm-gray c-white">
                            <i role="button" class="zmdi zmdi-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="col-md-3 m-b-20">
                    <label for="startDate" class="control-label f-13"><span>Ngày kết thúc</span></label>
                    <div class="input-group">
                        <input type="text" class="form-control pull-right date-picker searchColumn" id="endDate" name="endDate" placeholder="VD: 01/01/2021">
                        <span class="input-group-addon p-l-10 bgm-gray c-white">
                            <i role="button" class="zmdi zmdi-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="col-md-3 m-b-20">
                    <label for="queue" class="control-label f-13"><span>Chọn Queue</span></label>
                    <select name="queue" class="selectpicker searchColumn" data-live-search="true" title="---Chọn---">
                        <option value="">Tất cả</option>
                        <option value="<%- queueG1 %>">GGG_VOICE_G1</option>
                        <option value="<%- queueG2 %>">GGG_VOICE_G2</option>
                        <option value="<%- queueG3 %>">GGG_VOICE_G3</option>
                    </select>
                </div>
                <div class="col-md-3 m-b-20">
                    <label for="status" class="control-label f-13"><span>Trạng thái</span></label>
                    <select name="status" class="selectpicker searchColumn" data-live-search="true" title="---Chọn---">
                        <option value="">Tất cả</option>
                        <option value="0">Đã gọi lại</option>
                        <option value="1">Yêu cầu gọi lại</option>
                    </select>
                </div>
            </div>
            <div class="row m-0">
                <div class="col-md-3"></div>
                <div class="col-md-6 m-b-20">
                    <div class="btn-group btn-group btn-group-justified">
                        <a id="btn-search" role="button" class="btn bgm-blue uppercase c-white" style="width:auto">
                            <i class="fa fa-search m-r-10"></i><strong>Tìm kiếm</strong>
                        </a>
                        <div class="col-md-2"></div>
                        <a id="download-excel" class="btn bgm-blue default c-white" style="width:auto">
                            <i class="fa fa-file-excel-o m-r-10"></i>Xuất Excel
                        </a>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <div class="panel panel-default">
            <div>
                <div class="panel-body p-0 c-overflow">
                    <div class="tab-content">
                        <div role="tabpanel" style="height: 100%" class="tab-pane animated active">
                            <form role="form" id="frm-report-request-recall">
                                <table class="table table-bordered table-fix" id="tbl-ticket">
                                    <thead>
                                        <tr>
                                            <th class="bgm-orange c-white text-center w-100">
                                                <span class="TXT_STT"></span>
                                            </th>
                                            <th class="bgm-orange c-white text-center">
                                                <span class="TXT_CUSTOMER_PHONE"></span>
                                            </th>
                                            <th class="bgm-orange c-white text-center">
                                                <span class="TXT_TIME_CALL"></span>
                                            </th>
                                            <th class="bgm-orange c-white text-center">
                                                <span class="TXT_TIME_CALL_END"></span>
                                            </th>
                                            <th class="bgm-orange c-white text-center">
                                                <span class="TXT_STATUS_RECALL"></span>
                                            </th>
                                            <th class="bgm-orange c-white text-center w-100">
                                                <span class="TXT_ACTION"></span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="ticket-body">
    
                                    </tbody>
                                </table>
                                <div class="text-center" id="ticket-total">
    
                                </div>
                                <div class="text-center" id="ticket-paging"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>