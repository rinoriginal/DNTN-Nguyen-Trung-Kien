                    }
                    avg = Math.floor(avg);
                    totalAvg += avg;
                    var callDuration = Math.floor(o.callDuration / 1000);
                    missed = o.missed ? o.missed : (  o.totalCall ? (o.totalCall - o.connected): 0 );
                    var missRatio =  o.totalCall ? (missed * 100 / o.totalCall) : 0;
                    totalDuration += callDuration;
                    totalMissRatio += missRatio;
                %>
                    <td><%- o.EnterpriseName ? o.EnterpriseName : '' %></td>
                    <td>
                        <a href="javascript: bindingReportByDay(<%- o._id.month + ', ' + o._id.year + ', ' + o._id.name %>)">
                            <%- o._id.month+'/'+o._id.year %>
                        </a>
                    </td>
                    <td><%- o.totalCall ? o.totalCall : 0 %></td>
                    <td><%- o.connected ? o.connected : 0 %></td>
                    <td><%- o.callDuration ? hms(callDuration) : "00:00:00" %></td>
                    <td><%- o.callDuration ? callDuration.toLocaleString('vn') : '0'%></td>
                    <td><%- hms(avg) %></td>
                    <td><%- avg.toLocaleString('vn')%></td>
                    <td><%- missed%></td>
                    <td><%- o.totalCall ? missRatio.toFixed(2) : 0 %>%</td>
                </tr>
                <% }) %>
                <tr>
                    <%
                tmpAvgCallDuration = 0;
                if (total.callDuration && total.connected) {
                    tmpAvgCallDuration = Math.floor((total.callDuration / 1000) / total.connected)
                } else if(result2.length) {
                    tmpAvgCallDuration = (result2.reduce(function(s, i){
                        return s + i.callDuration / 1000;
                    }, 0) / 1000 / result2.reduce(function (s, i) {
                        return s + i.connected;
                    }));
                }
                %>
                    <th colspan="2">
                        <a href="javascript: bindingReportByDay(0, 0)">
                            Tổng
                        </a>
                    </th>
                    <td><%- total.totalCall ? total.totalCall : 0 %></td>
                    <td><%- total.connected ? total.connected : 0 %></td>
                    <td><%- total.callDuration ? hms(totalDuration) : "00:00:00" %></td>
                    <td><%- total.callDuration ? totalDuration.toLocaleString('vn') : '0'%></td>
                    <td><%- hms(totalAvg) %></td>
                    <td><%- totalAvg.toLocaleString('vn')%></td>
                    <td><%- missed %></td>
                    <td><%- total.totalCall ? (totalMissRatio / result2.length).toFixed(2) : 0 %>
                        %
                    </td>
                </tr>
            </tbody>
        </table>
