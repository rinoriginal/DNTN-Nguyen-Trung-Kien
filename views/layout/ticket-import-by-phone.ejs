<%- breadcrumb %>
<div class="card">
    <div class="card-header">
        <h2 class="m-b-5"><%- title %></h2>
        <small class="text-muted"><i>Những trường có dấu <span class="c-red">*</span> là bắt buộc nhập. </i></small>
    </div>
    <div class="card-body" style="min-height: 200px">
        <form role="form" class="form-horizontal" id="ticket-import-by-phone">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Số điện thoại <span
                            class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="tel" value="<%- phone %>" class="form-control input-sm validate[required, custom[number]]"
                               id="phone" name="phone">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Tên chiến dịch
                    <span class="required">*</span>
                </label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <select name="idCampain" id="idCampain" class="selectpicker input validate[required]"
                                title="Chọn chiến dịch">
                            <% for(var i = 0;i < campaigns.length;i++){ %>
                            <option value=<%- campaigns[i]._id %>><%- campaigns[i].name %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-6">
                    <button type="submit" class="btn btn-primary btn-icon-text m-t-10 waves-effect">
                        <i class="m-r-5 zmdi zmdi-plus-circle-o"></i>
                        Xác nhận
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
