<% 
var fileType = ['xlsx', 'xls', 'docx', 'doc']
var _url = function (f) {
    var extendfile = f.urlUpload.split('.').pop()
    var _tag = '';
    switch (fileType.indexOf(extendfile) == -1) {
        case false:
            _tag = '' +
                '<a href=https://docs.google.com/viewer?embedded=true&url=' + _urlUpload + encodeURIComponent(f.urlUpload) + ' target="_blank">'+ decodeURIComponent(f.nameUpload) +'</a>';               
            break;
        case true:
            if (extendfile == 'pdf') {
                _tag = '' +
                '<a href='+ encodeURIComponent(f.urlUpload) +' target="_blank">'+ decodeURIComponent(f.nameUpload) +'</a>'
            } else {
                _tag = '' +
                '<a href='+ encodeURIComponent(f.urlUpload) + ' download>'+ decodeURIComponent(f.nameUpload) +'</a>'
            }
            break;
    }
    return _tag;
}
%>

