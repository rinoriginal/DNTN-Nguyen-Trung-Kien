<%- breadcrumb %>
<div class="card">
    <div class="lv-header-alt clearfix m-b-5">
        <h2 class="lvh-label hidden-xs"><%- title %></h2>
        <ul class="lv-actions actions">
            <li><a data-toggle="tooltip" data-placement="top" data-original-title="Refresh"><i
                            class="zmdi zmdi-refresh"></i></a></li>
        </ul>
    </div>
    <form class="form-horizontal" role="form" id="report-customer-statify">
        <div class="form-body">
            <div class="row m-0 m-t-20">
                <div class="col-md-3 m-b-20">
                    <label for="startDate"
                           class="control-label f-13"><span>Thời gian</span></label>
                    <div class="input-group">
                        <input type="text" class="form-control pull-right multi-date-picker searchColumn"
                               id="created" name="created"
                               placeholder="VD: 01/19/2016">
                                            <span class="input-group-addon p-l-10 bgm-gray c-white">
                                                <i role="button" class="zmdi zmdi-calendar"></i></span>
                    </div>
                </div>
                <div class="col-md-3 m-b-20">
                    <label for="startDate"
                           class="control-label f-13"><span>Công ty</span></label>
                    <div>
                        <select class="selectpicker searchColumn" multiple name="idCompany">
                            <option disabled value="">- Chọn -</option>
                            <% if (companies) { %>
                            <% companies.forEach(function(el){ %>
                            <option value="<%- el._id %>"><%- el.name %></option>
                            <% })} %>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 m-b-20">
                    <label for="startDate"
                           class="control-label f-13"><span>Điện thoại viên</span></label>
                    <div>
                        <select class="selectpicker searchColumn" multiple name="idAgent">
                            <option disabled value="">- Chọn -</option>
                            <% if (agents) { %>
                            <% agents.forEach(function(el){ %>
                            <option value="<%- el._id %>"><%- el.displayName %> - <%- el.name %></option>
                            <% })} %>
                        </select>
                    </div>
                </div>
                <div class="col-md-3 m-b-20">
                    <label for="startDate"
                           class="control-label f-13"><span>Mức Độ Hài Lòng Khách Hàng</span></label>
                    <div class="input-group">
                        <select class="selectpicker searchColumn" name="statisfy">
                            <option selected value="">- Chọn -</option>
                            <% if (customerStatisfy) { %>
                            <% customerStatisfy.forEach(function(el){ %>
                            <option value="<%- el._id %>" style="font-weight: bold;"><%- el.name %></option>
                            <% if (el.stages) { %>
                            <% el.stages.forEach(function(el2){ %>
                            <option value="<%- (el._id + '-' + el2._id) %>" class="m-l-20"><%- el2.name %></option>
                            <% })} %>
                            <% })} %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row m-0">
                <div class="col-md-3"></div>
                <div class="col-md-6 m-b-20">
                    <div class="btn-group btn-group btn-group-justified">
                        <a id="btn-search" role="button" class="btn bgm-blue uppercase c-white" style="width:auto"><i
                                    class="fa fa-search m-r-10"></i><strong>Tìm
                                kiếm</strong></a>
                        <div class="col-md-2"></div>
                        <a id="download-excel" class="btn bgm-blue default c-white" style="width:auto"><i
                                    class="fa fa-file-excel-o m-r-10"></i>Xuất Excel</a>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-bordered table-fix" id="tbl-ticket">
                <thead>
                <tr class="f-10">
                    <th class="bgm-orange c-white text-center">
                        <span class="TXT_STAGE"></span>
                    </th>
                    <th class="bgm-orange c-white text-center">
                        <span class="TXT_STATISFY"></span>
                    </th>
                    <th class="bgm-orange c-white text-center">
                        <span class="TXT_COUNT"></span>
                    </th>
                    <th class="bgm-orange c-white text-center">
                        <span class="TXT_RATIO"></span>
                    </th>
                </tr>
                </thead>
                <tbody>
                <tbody id="tbl-body">
                </tbody>
                </tbody>
            </table>
            <br>
            <div class="text-center" id="tbl-total"></div>
            <div class="text-center" id="tbl-paging"></div>
            <br>
        </div>
    </form>
</div>