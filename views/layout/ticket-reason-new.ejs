<%- breadcrumb %>
<div class="card">
    <div class="card-header">
        <h2 class="m-b-5"><%- title %></h2>
        <small class="text-muted"><i>Những trường có dấu <span class="c-red">*</span> là bắt buộc nhập.</i></small>
    </div>
    <div class="card-body card-padding">
        <form role="form" class="form-horizontal" id="add-new-ticket">
            <div class="form-group">
                <label for="name" class="col-sm-3 control-label"><span class="TXT_REASON_NAME"></span><span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="text" maxlength="60" class="form-control" id="validate-reason-for-name" name="name" placeholder="VD: Công nghệ thông tin">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="category" class="col-sm-3 control-label"><span class="TXT_CATEGORY_NAME"></span><span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="p-relative">
                        <select class="selectpicker form-control  validate[required,ajax[ReasonCheck]]" id="idCategory" name="idCategory" data-placeholder="Nhóm tình trạng">
                            <option></option>
                            <% for(var i = 0; i < cat.length; i++){%>
                            <option value="<%- cat[i]._id%>"><%- cat[i].name %></option>
                                    <%}%>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="note" class="col-sm-3 control-label"><span class="TXT_NOTE"></span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="text" class="form-control input-sm" id="note" name="note" placeholder="vd : Công nghệ thông tin">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="category" class="col-sm-3 control-label"><span class="TXT_PRIORITY"></span><span class="required">*</span></label>
                <div class="col-sm-6">
                    <input type="number" class="form-control input-sm validate[required,ajax[PriorityCheck]]" id="priority" name="priority" placeholder="vd : 1, 2, 3...">
                </div>
            </div>
            <div class="form-group">
                <label for="status" class="col-sm-3 control-label"><span class="TXT_STATUS"></span></label>
                <div class="col-sm-6">
                    <div class="checkbox m-b-15">
                        <label>
                            <input type="checkbox" checked id="status" name="status">
                            <i class="input-helper"></i>
                            <span class="p-l-10" data-text-on="Không kích hoạt" data-text-off="Kích hoạt"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group m-b-0">
                <div class="col-sm-offset-3 col-sm-10">
                    <a class="btn btn-default btn-icon-text m-t-10 m-r-10 waves-effect waves-effect" id="btn-back" name="btn-back"><i class="m-r-5 zmdi zmdi-arrow-left"></i>Quay lại</a>
                    <button type="submit" class="btn btn-primary btn-icon-text m-t-10 waves-effect"><i class="m-r-5 zmdi zmdi-plus-circle-o"></i>Xác nhận</button>
                </div>
            </div>
        </form>
    </div>
</div>