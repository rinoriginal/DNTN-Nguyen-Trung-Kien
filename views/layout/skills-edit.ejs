<%-breadcrumb%>
<div class="card">
    <div class="card-header">
        <h2 class="m-b-5"><%- title %></h2>
        <small class="text-muted"><i>Những trường có dấu <span class="c-red">*</span> là bắt buộc nhập.</i></small>
    </div>
    <div class="card-body card-padding">
        <form role="form" class="form-horizontal" id="edit-skill">
            <div class="form-group">
                <label for="name" class="col-sm-3 control-label">Tên kỹ năng<span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="hidden" id="updateId" name="updateId" value="<%- currentSkill._id %>">
                        <input type="text" maxlength="60" class="form-control validate[required,ajax[SkillCheck]]" id="skillName" name="skillName" placeholder="VD: Kỹ năng" value="<%- currentSkill.skillName %>">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="group" class="col-sm-3 control-label">Công ty<span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line select">
                        <select class="form-control selectpicker validate[required,ajax[SkillCheck]]" id="idCompany" name="idCompany">
                            <option value='' disabled selected>---- Chọn ----</option>
                            <% companies.forEach(function(el, i) {%>
                            <option value="<%- el._id%>" <%- (currentSkill.idCompany && _equal(el._id.toString(),currentSkill.idCompany.toString()) ? 'selected' : ''); %>><%- el.name%></option>
                            <%})%>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="group" class="col-sm-3 control-label">Cảnh báo ngưỡng trên<span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="number" class="form-control validate[required,custom[DurHighCheck,min[1]]]" id="alarmDurHigh" name="alarmDurHigh" placeholder="VD: 20" value="<%- currentSkill.alarmDurHigh %>">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="group" class="col-sm-3 control-label">Cảnh báo ngưỡng dưới<span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="number" class="form-control validate[required,min[0]]" id="alarmDurLow" name="alarmDurLow" placeholder="VD: 5" value="<%- currentSkill.alarmDurLow %>">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="status" class="col-sm-3 control-label">Ghi âm</label>
                <div class="col-sm-6">
                    <div class="checkbox m-b-15">
                        <label>
                            <input type="checkbox" id="recordingState" name="recordingState" <% if (currentSkill.recordingState){%>
                                   checked
                                    <%}%>
                                    %>>
                            <i class="input-helper"></i>
                            <span class="p-l-10" data-text-on="Không kích hoạt" data-text-off="Kích hoạt"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="status" class="col-sm-3 control-label">Trạng thái</label>
                <div class="col-sm-6">
                    <div class="checkbox m-b-15">
                        <label>
                            <input type="checkbox" id="status" name="status" <% if (currentSkill.status){%>
                                    checked
                                    <%}%>
                                %>>
                            <i class="input-helper"></i>
                            <span class="p-l-10" data-text-on="Không kích hoạt" data-text-off="Kích hoạt"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group m-b-0">
                <div class="col-sm-offset-3 col-sm-10">
                    <a class="btn btn-default btn-icon-text m-t-10 m-r-10 waves-effect waves-effect" id="btn-back" name="btn-back"><i class="m-r-5 zmdi zmdi-arrow-left"></i>Quay lại</a>
                    <button type="submit" class="btn btn-primary btn-icon-text m-t-10 waves-effect" id="btn-submit" value="<%- currentSkill.skillName %>"><i class="m-r-5 zmdi zmdi-plus-circle-o"></i>Xác nhận</button>
                </div>
            </div>
        </form>
    </div>
</div>