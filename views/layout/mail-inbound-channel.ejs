<%-breadcrumb%>
<script>
    var _chatPort = JSON.parse('<%- JSON.stringify(chatPort) %>');
</script>
<div class="card">
    <div class="lv-header-alt clearfix">
        <h2 class="lvh-label hidden-xs"><%- title %></h2>
        <ul class="lv-actions actions">
            <li>
                <a href="#mail-inbound-channel/new" data-toggle="tooltip" data-placement="top" data-original-title="Tạo mới">
                    <i class="zmdi zmdi-plus"></i>
                </a>
            </li>
            <li>
                <a href="javascript:void(0)" id="btn-refresh" data-toggle="tooltip" data-placement="top" data-original-title="Làm mới">
                    <i class="zmdi zmdi-refresh"></i>
                </a>
            </li>
            <li class="hidden" id="li-hidden">
                <a role="button" data-toggle="tooltip" data-placement="top" data-original-title="Xóa các mục đánh dấu" id="btn-delSelection">
                    <i class="zmdi zmdi-delete"></i>
                </a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <form id="form-channel">
            <table class="table table-bordered" id="tbl-company-channel">
                <thead>
                <tr>
                    <th class="bgm-orange c-white text-center w-50">#</th>
                    <th class="bgm-orange c-white text-center w-200 sort" id="sortByTitle" name="sortByTitle" data-sort="none" data-field="title" value="title"><i class="zmdi zmdi-hc-fw p-r-10 c-white" data-toggle="tooltip" data-placement="top"></i>
                        Tên channel</th>
                    <th class="bgm-orange c-white text-center w-200 sort" id="sortByBody" name="sortByBody" data-sort="none" data-field="body" value="title"><i class="zmdi zmdi-hc-fw p-r-10 c-white" data-toggle="tooltip" data-placement="top"></i>
                        Tên công ty</th>
                    <th class="bgm-orange c-white text-center w-100">
                        Trạng thái</th>
                    <th class="w-100 bgm-orange c-white text-center">Tác vụ</th>
                </tr>
                </thead>
                <tbody>
                <tr class="filter">
                    <td class="text-center">
                        <div class="checkbox m-0">
                            <label>
                                <input name="select" type="checkbox" class="select-box select-box-all" value="all">
                                <i class="input-helper"></i>
                            </label>
                        </div>
                    </td>
                    <td class="text-center"><input class="form-control filter" type="text" id="name" name="name"></td>
                    <td class="text-center"><input class="form-control filter" type="text" id="company" name="company"></td>
                    <td>
                        <select class="form-control selectpicker" id="status" name="status">
                            <option selected value="-1">-- Tất cả --</option>
                            <option value="1">Kích hoạt</option>
                            <option value="0">Không kích hoạt</option>
                        </select>
                    </td>
                    <td><button class="btn btn-primary btn-block waves-effect" id="btn-search" name="btn-search"><i class="zmdi zmdi-filter-list m-r-5"></i> Lọc</button></td>
                </tr>
                <script> var isZeroList = false; </script>
                <% if (channel.length == 0){ %>
                <script> isZeroList   = true; </script>
                <%}else{ %>
                <% channel.forEach(function(c, i) { %>
                <tr>
                    <td class="select-cell text-center w-60">
                        <div class="checkbox m-0">
                            <label>
                                <input data-id="<%- c._id %>" name="select" type="checkbox" class="select-box select-box-cell" value="all">
                                <i class="input-helper"></i>
                            </label>
                        </div>
                    </td>
                    <td class="p-l-10"><%- c.name %></td>
                    <td class="p-l-10"><%- c.company.name %></td>
                    <td class="text-center">
                        <div class="checkbox m-0">
                            <label>
                                <input disabled name="select" type="checkbox" class="select-box" value="<%- c._id %>" <%- (c.status ? 'checked' : ''); %> />
                                <i class="input-helper"></i>
                            </label>
                        </div>
                    </td>
                    <td class="text-center">
                        <a class="p-t-3 btn-flat-bg" href="#mail-inbound-channel/<%- c._id %>/edit" data-toggle="tooltip" data-placement="top" data-original-title="Sửa"><i class="zmdi zmdi-edit green f-17"></i></a>
                        <a role="button" class="btn-remove btn-flat-bg" data-toggle="tooltip" data-placement="top" data-original-title="Xoá" data-id="<%- c._id %>"><i class="zmdi zmdi-close red f-23 "></i></a>
                    </td>
                </tr>
                <% }); }%>
                </tbody>
            </table>
            <%- include ('../paging.ejs') %>
        </form>
    </div>
</div>
<style>
    .sweet-alert.xxxx p{
        text-align: left;
    }
</style>