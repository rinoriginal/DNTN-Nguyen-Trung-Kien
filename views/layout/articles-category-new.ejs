<%- breadcrumb %>
<div class="card">
    <div class="card-header">
        <h2 class="m-b-5"><%- title %></h2>
        <small class="text-muted f-12">Những trường có dấu <span class="c-red">*</span> là bắt buộc nhập.</small>
    </div>
    <div class="card-body card-padding">
        <form role="form" class="form-horizontal" id="add-new-category">
            <div class="form-group">
                <label for="name" class="col-sm-3 control-label"><span class="TXT_ARTICLE_CATEGORY"></span><span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="text" class="form-control validate[required,ajax[CategoryCheck]]" id="name" name="name" placeholder="VD: Kỹ năng nghe máy">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="group" class="col-sm-3 control-label"><span class="TXT_ARTICLE_GROUP"></span><span class="required">*</span></label>
                <div class="col-sm-6">
                    <select class="selectpicker" id="group" name="group">
                        <option value="quy trình">Quy trình</option>
                        <option value="faq">FAQ</option>
                        <option value="kiến thức">Kiến thức</option>
                        <option value="khuyến mãi">Khuyến mãi</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="status" class="col-sm-3 control-label"><span class="TXT_ARTICLE_STATUS"></span></label>
                <div class="col-sm-6">
                    <div class="checkbox m-t-2 m-b-15">
                        <label>
                            <input type="checkbox" id="status" name="status" checked>
                            <i class="input-helper"></i>
                            <span class="p-l-10" data-text-on="Không kích hoạt" data-text-off="Kích hoạt"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group m-b-0">
                <div class="col-sm-offset-3 col-sm-10">
                    <a class="btn btn-default btn-icon-text m-t-10 m-r-10 waves-effect waves-effect" id="btn-back" name="btn-back" href="/#articles-category"><i class="m-r-5 zmdi zmdi-arrow-left"></i>Quay lại</a>
                    <button type="submit" class="btn btn-primary btn-icon-text m-t-10 waves-effect"><i class="m-r-5 zmdi zmdi-check"></i>Xác nhận</button>
                </div>
            </div>
        </form>
    </div>
</div>