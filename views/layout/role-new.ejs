<%-breadcrumb%>
<div class="card">
    <div class="card-header">
        <h2 class="m-b-5"><%- title %></h2>
        <small class="text-muted"><i>Những trường có dấu <span class="c-red">*</span> là bắt buộc nhập.</i></small>
    </div>
    <div class="card-body card-padding">
        <form role="form" class="form-horizontal" id="add-new-role">
            <div class="form-group">
                <label for="name" class="col-sm-3 control-label">
                    <span class="TEXT_ROLE_NAME"></span>
                    <span class="required">*</span></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="text" maxlength="60" class="form-control validate[required,ajax[RoleCheck]]" id="name" name="name" placeholder="VD: Quản lý">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="group" class="col-sm-3 control-label TEXT_DESC"></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <input type="text" class="form-control" id="description" name="description" placeholder="VD: Quản lý nhân viên">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="group" class="col-sm-3 control-label TEXT_ROLE_GROUP "></label>
                <div class="col-sm-6">
                    <div class="fg-line">
                        <select class="selectpicker searchColumn" name="roleGroup">
                            <% roles.forEach(function (item, index){ %>
                            <option value='<%- item.weight %>' <%- item.weight == 4 ? 'selected' : ''; %> ><%- item.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label for="status" class="col-sm-3 control-label TEXT_STATUS"></label>
                <div class="col-sm-6">
                    <div class="checkbox m-b-15">
                        <label>
                            <input type="checkbox" checked id="status" name="status">
                            <i class="input-helper"></i>
                            <span class="p-l-10" data-text-on="Không kích hoạt" data-text-off="Kích hoạt"></span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group m-b-0">
                <div class="col-sm-offset-3 col-sm-10">
                    <a class="btn btn-default btn-icon-text m-t-10 m-r-10 waves-effect waves-effect" id="btn-back" name="btn-back"><i class="m-r-5 zmdi zmdi-arrow-left"></i>Quay lại</a>
                    <button type="submit" class="btn btn-primary btn-icon-text m-t-10 waves-effect"><i class="m-r-5 zmdi zmdi-plus-circle-o"></i>Xác nhận</button>
                </div>
            </div>
        </form>
    </div>
</div>